{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext",
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    ".eslintrc.js",
    "rollup.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
